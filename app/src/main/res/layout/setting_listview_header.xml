<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/personal_center_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/user_avatar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:src="@mipmap/aboutme" />

        <TextView
            android:id="@+id/user_avatar_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/kyc_cell_status"
            android:layout_alignTop="@+id/user_avatar_icon"
            android:text="Pra般若糖果盒"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/kyc_cell_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar_tx"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="6dp"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:textSize="10sp"
            android:visibility="visible" />


        <LinearLayout
            android:id="@+id/kyc_status_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_avatar_tx"
            android:layout_marginLeft="88dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_certify_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:text=""
                android:textColor="@color/colorPrimaryDark"
                android:textSize="10sp" />


        </LinearLayout>


        <ImageView
            android:id="@+id/enter_certify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/setting_frag_enter_icon" />


    </RelativeLayout>
</RelativeLayout>